<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lulakssoft.activitymanagement.MainViewController">

    <VBox layoutX="14.0" layoutY="32.0" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id="titleLabel" text="My Activities" />
        <ListView fx:id="activityListView" />
    </VBox>
   <AnchorPane layoutX="300.0" layoutY="14.0" prefHeight="450.0" prefWidth="300.0">
      <children>
         <TextField fx:id="titleField" layoutX="75.0" layoutY="14.0" />
           <Button fx:id="addButton" layoutX="113.0" layoutY="278.0" text="Add Activity" textAlignment="CENTER" />
         <Button layoutX="102.0" layoutY="317.0" mnemonicParsing="false" text="Remove Activity" textAlignment="CENTER" />
         <TextArea fx:id="descriptionArea" layoutX="53.0" layoutY="64.0" prefHeight="200.0" prefWidth="200.0" />
         <DatePicker fx:id="dueDatePicker" layoutX="66.0" layoutY="369.0" />
      </children>
   </AnchorPane>
   <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="300.0">
     <menus>
       <Menu mnemonicParsing="false" text="Menu">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>

</AnchorPane>
