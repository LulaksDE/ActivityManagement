<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="486.0" prefWidth="290.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lulakssoft.activitymanagement.controller.ActivityEditorController">

    <AnchorPane prefHeight="486.0" prefWidth="302.0">
        <children>
            <TextField fx:id="titleField" layoutX="75.0" layoutY="66.0" promptText="Add title" />
            <TextArea fx:id="descriptionArea" layoutX="53.0" layoutY="114.0" prefHeight="200.0" prefWidth="200.0" promptText="Add description" />
            <Button fx:id="addButton" layoutX="64.0" layoutY="362.0" text="Add Activity" textAlignment="CENTER" />
            <Button fx:id="updateButton" layoutX="190.0" layoutY="362.0" mnemonicParsing="false" text="Update" />
            <DatePicker fx:id="dueDatePicker" layoutX="62.0" layoutY="399.0" />
            <CheckBox fx:id="completedCheckBox" layoutX="196.0" layoutY="445.0" mnemonicParsing="false" text="Completed" />
            <Label fx:id="idLabel" layoutX="14.0" layoutY="14.0" text="Activity ID: " />
            <Label fx:id="activityIdLabel" layoutX="75.0" layoutY="14.0" text="Label" />
            <CheckBox fx:id="keepPropertiesCheckBox" layoutX="26.0" layoutY="445.0" mnemonicParsing="false" text="Keep Properties" />

            <!-- ChoiceBox für die Priorität -->
            <ChoiceBox fx:id="priorityChoiceBox" layoutX="128.0" layoutY="323.0" prefHeight="26.0" prefWidth="120.0" />
            <Label layoutX="66.0" layoutY="328.0" text="Priority:" />
        </children>
    </AnchorPane>

</AnchorPane>
